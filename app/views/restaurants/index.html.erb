<div class="container">

  <h1>Restaurants</h1>

  <%= link_to "Add a new restaurant", new_restaurant_path %>

  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Address</th>
        <th>Category</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @restaurants.each do |restaurant| %>
        <tr>
          <td><%= restaurant.name %></td>
          <td><%= restaurant.address %></td>
          <td><%= restaurant.category %></td>
          <td><%= link_to "See details", restaurant_path(restaurant), class: "btn btn-primary" %></td>
          <%# <td><%= link_to 'Edit', edit_restaurant_path(restaurant)</td> %>
          <%# <td><%= link_to 'Destroy', restaurant, method: :delete, data: { confirm: 'Are you sure?' }</td> %>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>
